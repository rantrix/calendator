{
  "name": "calendator",
  "version": "0.0.0-development",
  "author": "Dexter Vu",
  "license": "MIT",
  "description": "The Calendator will generate a calendar and cache it for any month and year OR date!",
  "main": "index.js",
  "keywords": [
    "calendar",
    "calendator",
    "date",
    "day",
    "month",
    "the calendator",
    "year"
  ],
  "bugs": {
    "url": "https://github.com/rantrix/calendator/issues"
  },
  "homepage": "https://github.com/rantrix/calendator#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/rantrix/calendator.git"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "all": true,
    "check-coverage": true,
    "branches": 100,
    "function": 100,
    "lines": 100,
    "statements": 100,
    "reporter": [
      "lcov",
      "text"
    ],
    "includes": [
      "./index.js"
    ],
    "exclude": [
      "coverage",
      "semantic_release/**"
    ]
  },
  "release": {
    "analyzeCommits": "./node_modules/dv-plugin-analyze-commits/src/index.js"
  },
  "scripts": {
    "c": "git-cz",
    "lint": "eslint .",
    "mocha": "mocha",
    "nyc": "nyc",
    "precommit": "npm run lint",
    "postcommit": "npm run test",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "nyc mocha **.test.js",
    "testw": "nyc mocha -w **.test.js",
    "validate": "npm-run-all --parallel lint test"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "chai": "^3.5.0",
    "codecov": "^2.2.0",
    "commitizen": "^2.9.6",
    "conventional-commits-parser": "^1.3.0",
    "cz-conventional-changelog": "^2.0.0",
    "dv-plugin-analyze-commits": "^1.0.1",
    "eslint": "^3.19.0",
    "eslint-config-kentcdodds": "^12.2.1",
    "husky": "^0.13.4",
    "mocha": "^3.3.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^10.3.2",
    "semantic-release": "^7.0.2"
  }
}
